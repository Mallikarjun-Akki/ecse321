<% form_for(@hour_report) do |f| %>
<%= f.error_messages %>

<p>
  Task:<br />
  <%= f.collection_select :task_id, @available_tasks, :id, :full_name %>
</p>

<p>
  Name:<br />
  <%= f.text_field :name %>
</p>

<p>
  Total hours:<br />
  <%= f.text_field :hours %>
</p>

<p>
  Date worked:<br />
  <%= f.date_select :date %>
</p>

<p>
  Description:<br />
  <%= f.text_area :description %>
</p>

<p>
  <% unless @hour_report.new_record? then label = 'Update' else label = 'Create' end %>
  <%= f.submit label, :class => "go" %>
</p>
<% end %>
