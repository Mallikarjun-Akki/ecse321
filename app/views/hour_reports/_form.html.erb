<% form_for(@hour_report) do |f| %>
<%= f.error_messages %>

<p>
  Task:<br />
  <%= f.collection_select :task_id, Task.all, :id, :full_name %>
</p>

<p>
  Total hours:<br />
  <%= f.text_field :hours %>
</p>

<p>
  Date worked:<br />
  <%= f.date_select :date %>
</p>

<p>
  Description:<br />
  <%= f.text_area :description %>
</p>

<p>
  <% if @hour_report.user_id then label = 'Update' else label = 'Create' end%>
  <%= f.submit label %>
</p>
<% end %>
