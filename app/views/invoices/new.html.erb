<h1>New invoice</h1>

<% form_for(@invoice) do |f| %>
  <%= f.error_messages %>

  <p>
    <= f.label :project %><br />
    <= f.text_field :project %>
  </p>
  
  <p>
    <%= f.label :project %><br /> 
	<%= f.collection_select :project_id, Project.all, :id, :to_s, {:prompt => true} %>
	<= f.collection_select :task_id, Task.all, :id, :full_name %>


  </p>

  <p>
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date %>
  </p>
  <p>
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', invoices_path %>