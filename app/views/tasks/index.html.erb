<h1>Listing tasks</h1>

<table>
  <tr>
	<th>Name</th>
	<th>Project</th>
	<th># of Costs</th>
	<th>Cost</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
	<td><%= task.name %></td>
	<td><%= task.project %></td>
	<td><%= task.project_costs.size %></td>
	<td><%= task.get_cost %></td>
    <td><%= link_to 'Show', task, :class => "awesome small show" %>
	<% if can_update?(task) %>
    <%= link_to 'Edit', edit_task_path(task), :class => "awesome small edit" %>
	<% end %>
	<% if can_destroy?(task) %>
    <%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete, :class => "awesome small destroy" %></td>
	<% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>