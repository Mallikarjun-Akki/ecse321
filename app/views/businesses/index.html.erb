<h1>Listing businesses</h1>

<table>
  <tr>
    <th>Name</th>
	<th>Website</th>
    <th>Phone</th>
    <th>Clients</th>
    <th>Actions</th>
  </tr>

<% @businesses.each do |business| %>
  <tr>
    <td><%=h business.name %></td>
    <td><%= link_to business.website, business.website %></td>
    <td><%=h business.telephone %></td>
    <td><%=h business.contacts.length %></td>
    <td><%= link_to 'Show', business %> | 
    <%= link_to 'Edit', edit_business_path(business) %> | 
    <%= link_to 'Destroy', business, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

