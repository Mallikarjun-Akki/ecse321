<% form_for(@contact) do |f| %>
  <%= f.error_messages %>
  <div class="span-9">
	  <p>
	    <%= f.label :name %><br />
	    <%= f.text_field :name %>
	  </p>
	  <p>
	    <%= f.label :department %><br />
	    <%= f.text_field :department %>
	  </p>
	  <p>
	    <%= f.label :telephone %><br />
	    <%= f.text_field :telephone %>
	  </p>
	  <p>
	    <%= f.label :mobile %><br />
	    <%= f.text_field :mobile %>
	  </p>
	  <p>
	    <%= f.label :fax %><br />
	    <%= f.text_field :fax %>
	  </p>
	  <p>
	    <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </p>
	  <p>
	    <%= f.label :notes %><br />
	    <%= f.text_area :notes %>
	  </p>
	</div>
	<div class="prepend-1 span-10 last">
		<%= render :partial => 'addresses/form', :locals => {:f => f} %>
	</div>
	<div class="clear"></div>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
