<h2><%=h @user.full_name %></h2>

<div class="span-10">
	<p>
	  <b>Email:</b>
	  <%=h @user.email %>
	</p>

	<p>
	  <b>Telephone:</b>
	  <%=h @user.telephone %>
	</p>

	<% if can_update?(@user) %>
	<hr />
	<p>
	  <b>Login count:</b>
	  <%=h @user.login_count %>
	</p>

	<p>
	  <b>Last request at:</b>
	  <%=h @user.last_request_at %>
	</p>

	<p>
	  <b>Last login at:</b>
	  <%=h @user.last_login_at %>
	</p>

	<p>
	  <b>Current login at:</b>
	  <%=h @user.current_login_at %>
	</p>

	<p>
	  <b>Last login ip:</b>
	  <%=h @user.last_login_ip %>
	</p>

	<p>
	  <b>Current login ip:</b>
	  <%=h @user.current_login_ip %>
	</p>
	<% end %>
	<%= link_to edit_contact_text(@user), edit_account_path %>
</div>
