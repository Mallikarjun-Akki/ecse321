<h1>Listing Users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Telephone</th>
    <th>Employee #</th>
	<th>Actions</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.full_name %></td>
    <td><%=h user.email %></td>
    <td><%=h user.telephone %></td>
    <td><%=h user.employee_number %></td>
    <td><%= link_to 'Show', user, :class => "awesome show small" %> 
    <%= link_to 'Edit', edit_user_path(user), :class => "awesome edit small" %> 
    <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete, :class => "awesome destroy small" %></td>
  </tr>
<% end %>
</table>

<br />

